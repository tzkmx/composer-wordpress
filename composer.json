{
    "name": "jefrancomix/composer-wordpress",
    "description": "WordPress managed by composer with highly customized paths (bye wp-content!)",
    "license": "MIT",
    "authors": [
        {
            "name": "Jesus Franco",
            "email": "jefrancomix@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.6 || >=7.0",
        "composer/installers": "1.*",
        "johnpbloch/wordpress": "4.*",
        "wpackagist-theme/twentyseventeen": "~1.1",
        "timber/timber": "~1.2.1",
        "vlucas/phpdotenv": "2.*",
        "twig/twig": "~1.31"
    },
    "autoload": {
	    "psr-4": { "Tzkmx\\WP\\": "src/" }
    },
    "extra": {
        "wordpress-install-dir": "public/cms/",
        "installer-paths": {
            "public/must/{$name}/": ["type:wordpress-muplugin"],
            "public/extensions/{$name}/": ["type:wordpress-plugin"],
            "public/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
	    "post-create-project-cmd": "Tzkmx\\WP\\Installer::config"
    }
}
